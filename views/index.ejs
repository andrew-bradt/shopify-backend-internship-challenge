<!DOCTYPE html>
<html>
  <head>
    <title>Items</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('./partials/nav') %>
    <%- include('./partials/add-product') %>
    <button id="toggle-add-item">Add Item</button>
    <h1>Items</h1>
    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
        <% for (const id in items) { %>
          <tr>
            <td><%= items[id].name %></td>
            <td><%= items[id].description %></td>
            <td><img src = <%= items[id].imgURL %>/></td>
            <td>
              <button><a href = "/item/<%= id %>">Edit</a></button>
            </td>
          </tr>
        <% } %>
    </table>
    <script src="javascripts/index.js"></script>
  </body>
</html>
